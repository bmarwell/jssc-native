<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/POM/4.0.0"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.java-native.jssc</groupId>
        <artifactId>jssc-native-parent</artifactId>
        <version>5.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>jssc-native-windows-x86_32-32</artifactId>
    <name>jssc native windows-x86_32-32</name>

    <packaging>jar</packaging>

    <properties>
        <cmake.generate.extra />
        <system.lib.directory>windows-x86_32-32</system.lib.directory>
        <cmake.library.output.filename>jssc.dll</cmake.library.output.filename>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>groovy-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>verify-file</id>
                        <phase>verify</phase>
                        <goals><goal>execute</goal></goals>
                        <configuration>
                            <source>${project.basedir}/src/verify/groovy/file.groovy</source>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>windows-x86_32-32_cross-compile</id>
            <activation>
                <property>
                    <name>os.detected.name</name>
                    <value>!windows</value>
                </property>
            </activation>
            <properties>
                <cmake.generate.extra>-DCMAKE_TOOLCHAIN_FILE=${project.basedir}/../toolchains/windows-x86_32.cmake</cmake.generate.extra>
            </properties>
        </profile>
    </profiles>

</project>
